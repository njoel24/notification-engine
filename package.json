{
  "name": "notification-engine",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:images": "nx run restservice:docker-build && nx run wsservice:docker-build && nx run kafka:docker-build",
    "start": "npm run build:images  && npm run helm:install",
    "clean": " npm run helm:uninstall",
    "get:pods": "kubectl get pods",
    "get:containers": "docker ps --all",
    "get:deployments": "kubectl get deployments",
    "get:services": "kubectl get services",
    "helm:install": "helm install notification-engine ./chart --replace",
    "helm:get-ns": "helm list --all-namespaces",
    "helm:get-ingress": "kubectl get ingress -n default",
    "helm:upgrade": "helm upgrade notification-engine ./chart",
    "helm:uninstall": "helm uninstall notification-engine || true",
    "docker:kafka-topics": "docker exec -it kafka bash && kafka-topics --create --topic notifications --bootstrap-server localhost:9092 --partitions 1 --replication-factor 1"
  },
  "private": true,
  "dependencies": {
    "axios": "^1.6.0",
    "express": "~4.18.1",
    "kafkajs": "^2.2.4",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nrwl/node": "^19.8.4",
    "@nrwl/workspace": "^19.8.4",
    "@nx/esbuild": "19.8.4",
    "@nx/eslint": "19.8.4",
    "@nx/eslint-plugin": "19.8.4",
    "@nx/jest": "19.8.4",
    "@nx/js": "20.5.0",
    "@nx/node": "19.8.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "~4.17.13",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@types/ws": "^8.18.0",
    "docker": "^1.0.0",
    "docker-compose": "^1.2.0",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "helm": "^0.2.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "20.5.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
