{
  "name": "kafka-consumer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/kafka-consumer/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "remove-deployment": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "kubectl delete deployment kafka-consumer-deployment --ignore-not-found=true"
        ],
        "parallel": false
      }
    }, 
    "remove-container": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker rm -f kafka-consumer-container"
        ],
        "parallel": false
      }
    },  
    "remove-service": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "kubectl delete service kafka-consumer-deployment --ignore-not-found=true"
        ],
        "parallel": false
      }
    },  
    "k8s-service-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "kubectl apply -f deploy/kafka-consumer-service.yml"
        ],
        "parallel": false
      }
    },
    "k8s-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "kubectl apply -f deploy/kafka-consumer-deployment.yaml"
        ],
        "parallel": false
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -t kafka-consumer -f ./packages/kafka-consumer/Dockerfile ."
        ],
        "parallel": false
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker run -d -p 8080:8080 --name kafka-consumer-container kafka-consumer"
        ],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/packages/kafka-consumer",
        "format": ["cjs"],
        "bundle": false,
        "main": "packages/kafka-consumer/src/main.ts",
        "tsConfig": "tsconfig.json",
        "assets": ["packages/kafka-consumer/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "kafka-consumer:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "kafka-consumer:build:development"
        },
        "production": {
          "buildTarget": "kafka-consumer:build:production"
        }
      }
    }
  }
}
